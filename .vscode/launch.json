    "version": "0.2.0",
    "configurations": [
        {
            "name": "Watch",
            "type": "node",
            "request": "launch",
            "console": "internalConsole",
            "runtimeExecutable": "npm",
            "sourceMaps": true,
            "showAsyncStacks": true,
            "protocol": "inspector",
            "runtimeArgs": [
                "run",
                "watch"
            ]
        },{
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug"
            ],
            "port": 9229
        },
        {
            "name": "Serve",
            "type": "node",
            "request": "launch",
            "console": "internalConsole",
            "runtimeExecutable": "npm",
            "sourceMaps": true,
            "showAsyncStacks": true,
            "protocol": "inspector",
            "runtimeArgs": [
                "run",
                "serve"
            ],
            "env": {
                "NODE_PATH": "src"
            },

        },
        {
            "name": "Test",
            "type": "node",
            "request": "launch",
            "console": "internalConsole",
            "runtimeExecutable": "npm",
            "sourceMaps": true,
            "showAsyncStacks": true,
            "protocol": "inspector",
            "runtimeArgs": [
                "test"
            ],
            "env": {
                "NODE_PATH": "src",
                "TS_NODE_FILES": "true"
            },

        }
    ]
}